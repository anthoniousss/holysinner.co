<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/putih"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyActivity"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_buy"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/applogo3"
        />
    
    <EditText
        android:id="@+id/recipienEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipient Email"
        android:layout_below="@id/logo_buy"
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:textColor="#000"
        android:textColorHint="#000"
        />

    <EditText
        android:id="@+id/messageEt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kode Outfit"
        android:layout_below="@id/recipienEt"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:textColor="#000"
        android:textColorHint="#000"
        />
    
    <EditText
        android:id="@+id/messageEt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:hint="Alamat"
        android:layout_below="@id/messageEt1"
        android:textColor="#000"
        android:textColorHint="#000"
        />
    
    <EditText
        android:id="@+id/messageEt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageEt2"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:hint="Ukuran"
        android:textColor="#000"
        android:textColorHint="#000"
        />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NO.REK : 3452531655"
                android:textSize="20sp"
                android:textColor="#000"
                />
    
    <Button
        android:id="@+id/sendEmailBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUY NOW"
        android:layout_below="@id/messageEt3"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:textColor="#000"
        />




        </LinearLayout>
    </ScrollView>
</RelativeLayout>